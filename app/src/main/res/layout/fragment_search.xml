<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="25dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/app_name"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="23dp"
            android:fontFamily="@font/arimo_bold"
            android:textSize="25dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:src="@drawable/baseline_search_24"
            android:background="#00FFFFFF"
            android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Search"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/search_container"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:orientation="vertical"
                android:layout_height="555dp">

            <TextView
                    android:layout_width="match_parent"
                    android:text="Search"
                    android:textColor="#000000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/arimo_bold"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/edit_location"
                    android:layout_width="match_parent"
                    android:hint="Country or location name"
                    android:textColor="#000"
                    android:paddingVertical="15sp"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="15sp"
                    android:background="@drawable/edit_bg"
                    android:textColorHint="#80000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/edit_tour"
                    android:layout_width="match_parent"
                    android:hint="Tour name"
                    android:textColor="#000"
                    android:paddingVertical="15sp"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="15sp"
                    android:background="@drawable/edit_bg"
                    android:textColorHint="#80000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="match_parent"
                    android:text="People"
                    android:textColor="#000000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="15sp"
                    android:fontFamily="@font/arimo_bold"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"/>


            <com.google.android.material.slider.RangeSlider
                    android:id="@+id/people_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stepSize="1.0"
                    android:layout_marginTop="10sp"
                    app:values="@array/initial_range_slider_values"
                    android:valueFrom="0.0"
                    android:valueTo="20.0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.499"/>

            <TextView
                    android:layout_width="match_parent"
                    android:text="Date"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/arimo_bold"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="70dp"
                        android:hint="From: "
                        android:textColor="#000"
                        android:paddingVertical="15sp"
                        android:fontFamily="@font/arimo_bold"
                        android:textSize="14sp"
                        android:inputType="date"
                        android:layout_height="wrap_content"/>


                <TextView
                        android:id="@+id/date_from"
                        android:layout_width="wrap_content"
                        android:hint="00.00.0000"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:paddingVertical="15sp"
                        android:paddingHorizontal="15sp"
                        android:background="@drawable/edit_bg"
                        android:textColorHint="#80000000"
                        android:textSize="14sp"
                        android:inputType="date"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_width="70dp"
                        android:hint="To: "
                        android:textColor="#000"
                        android:paddingVertical="15sp"
                        android:fontFamily="@font/arimo_bold"
                        android:paddingLeft="25dp"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/date_to"
                        android:layout_width="wrap_content"
                        android:hint="00.00.0000"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:paddingVertical="15sp"
                        android:paddingHorizontal="15sp"
                        android:background="@drawable/edit_bg"
                        android:textColorHint="#80000000"
                        android:textSize="14sp"
                        android:inputType="date"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:text="Price (UAN)"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/arimo_bold"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"/>

            <com.google.android.material.slider.RangeSlider
                    android:id="@+id/price_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stepSize="10.0"
                    android:layout_marginTop="10sp"
                    app:values="@array/initial_range_price_slider_values"
                    android:valueFrom="0.0"
                    android:valueTo="100000.0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.499"/>

            <Button
                    android:id="@+id/btn_search_now"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:text="Search"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arimo_bold"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_bg"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/result_container"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/empty_container"
                android:layout_width="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_empty_list"
                    android:alpha="0.5"
                    android:layout_height="55dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="No result found"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/arimo_regular"
                    android:textColor="#80000000"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tourList"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_marginBottom="15dp"
                android:layout_height="match_parent"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayoutList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:animateLayoutChanges="true"
                android:animationCache="true"
                android:visibility="visible"
                app:shimmer_repeat_mode="restart"
                app:shimmer_shape="radial">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include
                        android:layout_marginTop="15dp"
                        layout="@layout/shimmer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <include
                        android:layout_marginTop="15dp"
                        layout="@layout/shimmer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <include
                        android:layout_marginTop="15dp"
                        layout="@layout/shimmer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <include
                        android:layout_marginTop="15dp"
                        layout="@layout/shimmer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <include
                        android:layout_marginTop="15dp"
                        layout="@layout/shimmer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <include
                        android:layout_marginTop="15dp"
                        layout="@layout/shimmer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <include
                        android:layout_marginTop="15dp"
                        layout="@layout/shimmer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <include
                        android:layout_marginTop="15dp"
                        layout="@layout/shimmer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>